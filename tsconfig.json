{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/send/route.js",
    "app/components/utils/anim.ts",
    "app/components/utils/Preloader.tsx",
    "app/components/context/DarkModeContext.jsx",
    "app/components/DarkModeToggle.jsx",
    "app/components/hooks/useLocalStorageState.ts"
  ],
  "exclude": ["node_modules"]
}
